extends _template

block head
  link(rel="stylesheet",href="css/level-one.css")
  meta(property="og:image",content="http://etblue.github.io/wild.coscup.org/public/img/cover.png")

  block subhead

block body

  nav#topbar
    //-.ui.borderless.secondary.menu.simplified.horizontal.wrap
    .ui.borderless.menu.simplified.horizontal.wrap
      .short
        .desktop.laptop.tablet.phone
          //.ui.dropdown.logo.item
          a.item(href="index").long
            | COSCUP 2015
          .ui.dropdown.item
            block title
            //img.logo.image(src="img/logo.png")
            i.icon.dropdown
            .menu
              include -level-one-nav
              include -level-one-nav-second
              include -level-one-nav-third
          block topnav
      .long
        .desktop.laptop.tablet
          //a.logo.item(href="index")
            img.logo.image(src="img/logo.png")
          a.item(href="index").long
            | COSCUP 2015
          include -level-one-nav
          block topnav
        .phone
          //.ui.dropdown.logo.item
          a.item(href="index").long
            | COSCUP 2015
          .ui.dropdown.item
            block title
            //img.logo.image(src="img/logo.png")
            i.icon.dropdown
            .menu
              include -level-one-nav
              include -level-one-nav-second
              include -level-one-nav-third
          block topnav
      .ui.dropdown.right.item
        i.icon.globe
        span.desktop.laptop.tablet 語言
        .menu
          .item English
          .item 正體中文
      .right.menu.short
        .desktop.laptop.tablet
          include -action-menu
        .phone
          .ui.dropdown.item
            i.icon.ellipsis.vertical
            .menu
              include -action-menu
      .right.menu.long
        .desktop.laptop.tablet
          include -action-menu
        .phone
          .ui.dropdown.item
            i.icon.ellipsis.vertical
            .menu
              include -action-menu
        //-.right.item
          .ui.icon.input
            input(type='text',placeholder='')
            i.icon.search.link
        //block topbar

  block content

  block footer

