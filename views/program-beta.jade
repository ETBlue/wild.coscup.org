extends _level-one

block subhead
  link(rel="stylesheet",href="css/program.css")
  //-meta(property="og:image",content="img/cover.png")

block title
  | 議程

block topnav
  .ui.simple.dropdown.item.short
    | Day 1
    //i.icon.dropdown
    .day-menu.menu
      include -day-menu
  .ui.simple.dropdown.item.short
    | 演講
    //i.icon.dropdown
    .schedule-menu.menu
      include -schedule-menu

block content
  #program
    //-header#header.align.center
      .horizontal.wrap
        .ui.segment.simplified.blue.inverted
          h1.ui.header
            //-i.icon.pointing.right
            | 議程
          //-.countdown(data-use-schedule='speech',data-countdown-html='')
          //-.countdown(data-use-schedule='workshop',data-countdown-html='')
          //-.countdown(data-use-schedule='unconf',data-countdown-html='')

    //-section#gsheet
      .horizontal.wrap
        iframe(src='http://davidwalsh.name/scroll-iframes-ios')
    section#filter.long
      .horizontal.wrap
        .day-menu.ui.menu.simplified.fluid.two.item.blue.inverted.no.margin
          include -day-menu
        .schedule-menu.ui.secondary.pointing.menu.no.margin
          include -schedule-menu
        //-#schedule-expand-button.ui.button.fluid
          span.expand.action
            i.icon.down.chevron
            | 展開
          span.collapse.action
            i.icon.up.chevron
            | 收合
          | 已結束議程
    section#day-1.ui.tab(data-tab='day-1')
      section.speech.active.schedule(data-use-schedule='speech')
        //.loader.ui.active.inverted.dimmer
          .ui.text.loader loading
        .horizontal.wrap
          .ui.grid.five.column.room
            .row
              .column
                a.ui.label.black.fluid
                  span 國際會議廳
                  i.icon.location.arrow.float.right
              .column
                a.ui.label.black.fluid
                  span 第一會議室
                  i.icon.location.arrow.float.right
              .column
                a.ui.label.black.fluid
                  span 第二會議室
                  i.icon.location.arrow.float.right
              .column
                a.ui.label.black.fluid
                  span 第三會議室
                  i.icon.location.arrow.float.right
              .column
                a.ui.label.black.fluid
                  span 國際會議廳
                  i.icon.location.arrow.float.right
        .scroll-area
          .horizontal.wrap
            .ui.grid.five.column.slots
              .slot
                .time 9:00
              .row(data-active-on='',data-expire-on='').expire
                include -session1
                include -session
                include -session1
                include -session2
                include -session1
              .slot
                .time 10:00
              .row(data-active-on='',data-expire-on='').expire
                .ui.horizontal.divider break
              .slot
                .time 11:00
              .row(data-active-on='',data-expire-on='').active
                include -session2
                include -session
                include -session2
                include -session1
                include -session2
              .slot
                .time 12:00
              .row(data-active-on='',data-expire-on='')
                .ui.horizontal.divider break
              .slot
                .time 13:00
              .row(data-active-on='',data-expire-on='')
                include -session2
                include -session
                include -session2
                include -session1
                include -session2
      section.workshop.schedule(data-use-schedule='workshop')
        //.loader.ui.active.inverted.dimmer
          .ui.text.loader loading
      section.unconf.schedule(data-use-schedule='unconf')
        //.loader.ui.active.inverted.dimmer
          .ui.text.loader loading
    section#day-2.ui.tab(data-tab='day-2')
      section.speech.active.schedule(data-use-schedule='speech')
        //.loader.ui.active.inverted.dimmer
          .ui.text.loader loading
        .horizontal.wrap
          .ui.grid.five.column
            .row(data-active-on='',data-expire-on='').expire
              .slot
                .time 9:00
              include -session1
              include -session2
              include -session1
              include -session2
              include -session1
            .row(data-active-on='',data-expire-on='').expire
              .slot
                .time 10:00
              .ui.horizontal.divider break
            .row(data-active-on='',data-expire-on='').active
              .slot
                .time 11:00
              include -session2
              include -session1
              include -session2
              include -session1
              include -session2
            .row(data-active-on='',data-expire-on='')
              .slot
                .time 12:00
              .ui.horizontal.divider break
            .row(data-active-on='',data-expire-on='')
              .slot
                .time 13:00
              include -session2
              include -session1
              include -session2
              include -session1
              include -session2
      section.workshop.schedule(data-use-schedule='workshop')
        //.loader.ui.active.inverted.dimmer
          .ui.text.loader loading
      section.unconf.schedule(data-use-schedule='unconf')
        //.loader.ui.active.inverted.dimmer
          .ui.text.loader loading
    section#banner
      section#advertisement.align.center
        .horizontal.wrap
          .ui.orange.inverted.segment.simplified 感謝 kktix 熱情贊助 COSCUP 2015
      section#announcement.align.center
        .horizontal.wrap
          .ui.inverted.segment.simplified
            i.icon.announcement
            span 大會公告：遺失物品請到櫃臺領取
        //-.ui.grid.two.column.stackable
          .row
            .column
            .column
      //-footer#bottombar
        .ui.borderless.menu.simplified.horizontal.wrap
          include -level-one-nav-second
          .right.menu
            include -level-one-nav-third

