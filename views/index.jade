    function insert_slideshow( data, tabletop ) {

      $( function() {
        var slides = tabletop.sheets('slideshows').all();

        $('#home ul.bxslider')
          .append( slide_template( {slides: slides} ) )
          .bxSlider({
            captions: true,
            adaptiveHeight: true
          });
      });
    }

