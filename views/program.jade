extends _level-one

block subhead
  link(rel="stylesheet",href="css/program.css")
  //-meta(property="og:image",content="img/cover.png")

block title
  | 議程 | 

block content
  #program
    header#header.align.center
      .horizontal.wrap
        .ui.segment.simplified.blue.inverted
          h1.ui.header
            //-i.icon.pointing.right
            | 議程
          .countdown(data-use-schedule='session',data-countdown-html='')
          .countdown(data-use-schedule='workshop',data-countdown-html='')
          .countdown(data-use-schedule='unconf',data-countdown-html='')

    section#filter
      .horizontal.wrap
        .ui.menu.simplified.fluid.two.item.blue.inverted.no.margin
          a.item(data-active-time='',data-expire-time='').active Day 1
            .ui.label 8/15 Sat.
          a.item(data-active-time='',data-expire-time='') Day 2
            .ui.label 8/16 Sun.
        .ui.secondary.pointing.menu.no.margin
          a.item.blue(data-change-schedule='session') 五軌議程
            //.ui.label.blue 5
          a.item.teal(data-change-schedule='workshop') 三軌工作坊
            //.ui.label.teal 3
          a.item.green(data-change-schedule='unconf') 兩軌 unconf
            //.ui.label.green 2
          a.right.item.yellow
            | 我喜歡的
            //i.icon.star.yellow
            .ui.label.yellow 10
    section#session.active.schedule(data-use-schedule='session')
      #loader.ui.active.inverted.dimmer
        .ui.text.loader loading
      .horizontal.wrap
        .ui.grid.five.column
          .slot
            .time 9:00
          .row(data-active-time='',data-expire-time='').expire
            include -session1
            include -session2
            include -session1
            include -session2
            include -session1
          .slot
            .time 10:00
          .row(data-active-time='',data-expire-time='').expire
            .ui.horizontal.divider break
          .slot
            .time 11:00
          .row(data-active-time='',data-expire-time='').active
            include -session2
            include -session1
            include -session2
            include -session1
            include -session2
          .slot
            .time 12:00
          .row(data-active-time='',data-expire-time='')
            .ui.horizontal.divider break
          .slot
            .time 13:00
          .row(data-active-time='',data-expire-time='')
            include -session2
            include -session1
            include -session2
            include -session1
            include -session2
    section#workshop.schedule(data-use-schedule='workshop')
      #loader.ui.active.inverted.dimmer
        .ui.text.loader loading
    section#unconf.schedule(data-use-schedule='unconf')
      #loader.ui.active.inverted.dimmer
        .ui.text.loader loading
    section#advertisement.align.center
      .horizontal.wrap
        .ui.orange.inverted.segment.simplified 感謝 kktix 熱情贊助 COSCUP 2015
    section#announcement.align.center
      .horizontal.wrap
        .ui.red.inverted.segment.simplified
          i.icon.announcement
          span 大會公告：遺失物品請到櫃臺領取

block footer

block script
  script.
    $(document).ready(function(){
      $("[href*='program']").addClass("active");
    });

