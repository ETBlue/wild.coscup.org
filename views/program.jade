block script
  script.
    $(document).ready(function(){

      $("[href*='program']").addClass("active");

      $('#day-menu .item').tab({
        history: true,
        historyType: 'hash',
        //context: $('#program')
      }).on('click tap', function(){
        window.scrollTo(0, 0);
      });

      $('#schedule-expand-button').on('click tap',function(){
        $('.row.expire').slideToggle();
        $(this).find('.action').toggle();
      });

    });

